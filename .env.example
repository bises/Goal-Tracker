# Root Environment Variables (for Docker Compose)

# Docker Hub Configuration
DOCKER_USERNAME=your_dockerhub_username

# Database Configuration
POSTGRES_USER=goaltracker
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=goaltracker

# API Configuration
DATABASE_URL=postgresql://goaltracker:change_this_secure_password@postgres:5432/goaltracker
PORT=3000

# Web Configuration
VITE_API_URL=http://localhost:3000/api

# HTTPS Configuration (Optional)
USE_HTTPS=falseSSL_CERT_PATH=/certs/cert.crt
SSL_KEY_PATH=/certs/cert.key

# GitHub Container Registry (for deployment)
GITHUB_REPO_OWNER=your_github_username
